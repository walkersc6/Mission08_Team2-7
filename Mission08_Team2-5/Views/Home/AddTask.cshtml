@model Mission08_Team2_5.Models.Task
@{
    ViewData["Title"] = "Add Task";
}

@* bootstrap col *@
<div class="col-10">
    
<div class="container my-5">
    <h1 class="text-center mb-4">Add a New Task</h1>
    
    
    @* TaskID *@
    <form method="post">
        <input type="hidden" asp-for="TaskId"/>
        
        <div class="mb-3">
            <label class="form-label">Task Name</label>
            <input type="text" class="form-control" asp-for="TaskName" placeholder="Enter task name" required>
        </div>

        <div class="mb-3">
            <label asp-for="DueDate" class="form-label">Due Date</label>
            <input type="date" class="form-control" asp-for="DueDate">
        </div>

        <div class="mb-3">
            <label asp-for="Quadrant" class="form-label">Quadrant</label>
            <select class="form-select" asp-for="Quadrant" required>
                <option value="1">Quadrant 1 - Important / Urgent</option>
                <option value="2">Quadrant 2 - Important / Not Urgent</option>
                <option value="3">Quadrant 3 - Not Important / Urgent</option>
                <option value="4">Quadrant 4 - Not Important / Not Urgent</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select class="form-select" asp-for="CategoryId" required>
                <option value="">Select a Category</option>
                @foreach (var category in ViewBag.Categories as IEnumerable<Mission08_Team2_5.Models.Category>)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            </select>
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="Completed" name="Completed">
            <label class="form-check-label" for="Completed">Completed</label>
        </div>

        <button type="submit" class="btn btn-primary">Add Task</button>
        <a href="/Home/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

</div>
